<!--
    - Policies are applied in the order they appear.
    - Position <base/> inside a section to inherit policies from the outer scope.
    - Comments within policies are not preserved.
-->
<!-- Add policies as children to the <inbound>, <outbound>, <backend>, and <on-error> elements -->
<policies>
    <!-- Throttle, authorize, validate, cache, or transform the requests -->
    <inbound>
        <base />
        <!-- Define the Quota/ Rate limiting policies here..
        Here we are using subscriptionId as counter-key but it can be any identifier -->
        <!-- We have used some example values here to define an example rate limiter -->
        <azure-openai-token-limit counter-key="@(String.Concat(context.Subscription.Id,"-mt-product2"))"
            tokens-per-minute="100"
            estimate-prompt-tokens="true"
            remaining-tokens-header-name="x-apim-max-remaining-tokens"
            tokens-consumed-header-name="x-apim-max-consumed-tokens"
        />

    </inbound>
    <!-- Control if and how the requests are forwarded to services  -->
    <backend>
        <base />
    </backend>
    <!-- Customize the responses -->
    <outbound>
        <base />
    </outbound>
    <!-- Handle exceptions and customize error responses  -->
    <on-error>
        <base />
    </on-error>
</policies>
